@model CategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Edit</h1>

<form asp-controller="category" asp-action="AddOrEdit" method="post" enctype="multipart/form-data" asp-antiforgery="true">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" type="text" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Picture" class="form-label"></label>
        <input asp-for="Picture" class="form-control" type="file" />
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>